<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Register</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="" />

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Register Here -->
    <section id="login" class="my-5">
      <div class="container">
        <div class="row">
          <!-- Column-2 -->
          <div class="col-lg-6 bglogin p-4">
            <form
              action="/insertStudent"
              method="post"
              enctype="multipart/form-data"
            >
              <!-- Heading (Register Here) -->
              <h1 class="mb-5 text-center">Register Here</h1>

              <% if(message.length > 0) { %>
              <div class="alert alert-danger">
                <!--  massage  prinent -->
                <%= message %>
              </div>
              <% } %>

              <!-- User Name -->
              <div class="row mb-4">
                <div>Name:</div>
                <div class="col-lg-10">
                  <input
                    name="name"
                    class="form-control text-capitalize"
                    type="text"
                    placeholder="Enter your name"
                  />
                </div>
              </div>

              <!-- Email -->
              <div class="row mb-3">
                <div>Email:</div>
                <div class="col-lg-10">
                  <input
                    name="email"
                    class="form-control"
                    type="email"
                    placeholder="name@example.com"
                  />
                </div>
              </div>

              <!-- Password -->
              <div class="row mb-4">
                <div>Password:</div>
                <div class="col-lg-10">
                  <input name="password" class="form-control" type="password" />
                </div>
              </div>

              <!-- Confirm Password -->
              <div class="row mb-4">
                <div>Confirm Password:</div>
                <div class="col-lg-9">
                  <input
                    name="confirmpassword"
                    class="form-control"
                    type="password"
                  />
                </div>
              </div>

              <!-- Button (Login) -->
              <center>
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Register
                </button>
              </center>
            </form>
          </div>
          <!-- End Column-2 -->
        </div>
      </div>
    </section>
    <!-- End Register Here -->

    <!-- Java Script Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
